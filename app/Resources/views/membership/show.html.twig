{% extends 'base.html.twig' %}

{% block body %}
    <h1>Membership</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membership.id }}</td>
            </tr>
            <tr>
                <th>Since</th>
                <td>{% if membership.since %}{{ membership.since|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Until</th>
                <td>{% if membership.until %}{{ membership.until|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('membership_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('membership_edit', { 'id': membership.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
