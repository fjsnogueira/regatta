{% extends 'base.html.twig' %}

{% block title %}
    {{ race.getEvent.getName }} - Rennen {{ race.numberInEvent }} - Ab-/Ummeldung
{% endblock %}

{% block body %}
    <h1>#{{ race.numberInEvent }}: {{ rr.getOfficialName(race) }}<br>
        {% if race.extraText != "" %}<small>{{ race.extraText }}</small>{% endif %}
    </h1>

    <table class="table table-striped sortable">
        <thead>
            <th data-defaultsign="_19" data-defaultsort="asc">Lauf</th>
            <th data-defaultsign="_19">Bahn</th>
            <th data-defaultsign="az">Name</th>
            <th data-defaultsort='disabled'></th>
        </thead>
        <tbody>
        {% for section in race.getSections() %}
            {% for group in section.getGroups() %}
            {% set team = group.getTeam() %}
            <tr>
                <td>
                    {{ section.getNumber() }}
                </td>
                <td>
                    {{ group.getLane() }}
                </td>
                <td>
                    {% if group.isDeregistered or group.hasChangedToNewRace %}<s>{% endif %}
                    {{ team.getName() }} ({{ team.getClub().getShortName() }})<br>
                    <em>{% for m in team.getMembers %}{{ m.getMembership.getPerson.getFirstName }}
                            {{ m.getMembership.getPerson.getLastName | upper }}
                            ({% if m.getIsCox %}Stm., {% endif %}{{ m.getMembership.getPerson.getYearOfBirth }}, {{ m.getMembership.getPerson.getAge }}) {% endfor %}</em>
                    {% if group.isDeregistered or group.hasChangedToNewRace %}</s>{% endif %}
                    {% if group.isFromOtherRace %}<br>(aus Rennen <a href="{{ path('race_show', { 'event': race.event.id, 'race': group.getChangedRace.id }) }}">#{{ group.getChangedRace.getNumberInEvent }}</a>){% endif %}
                </td>
                <td>
                    {% if not group.hasChangedToNewRace and not group.isDeregistered %}
                    <div id="changeModal-{{ team.getId }}" class="modal fade" tabindex="-1" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">In welches Rennen ummelden?</h4>
                                </div>
                                <form name="form" method="post" class="form-horizontal">
                                    <div class="modal-body">
                                        <p><strong>{{ team.getName() }} ({{ team.getClub().getShortName() }})</strong><br>
                                            <em>{% for m in team.getMembers %}{{ m.getMembership.getPerson.getFirstName }}
                                                    {{ m.getMembership.getPerson.getLastName | upper }}
                                                    ({% if m.getIsCox %}Stm., {% endif %}{{ m.getMembership.getPerson.getYearOfBirth }}, {{ m.getMembership.getPerson.getAge }})
                                                {% endfor %}</em></p>

                                        <!-- show form with dropdown of all possible races (except this one) -->
                                        <div id="form">
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label required" for="form_race">Rennen</label>
                                                <div class="col-sm-10">
                                                    <select id="form_race" name="form[race]" class="form-control">
{% for r in all_races %}
                                                    <option value="{{ r.getId }}" >{{ r.getId }}: {{ rr.getOfficialName(r) }}</option>
{% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <input type="hidden" name="form[group]" value="{{ group.id }}" />
                                        <input type="hidden" id="form__token" name="form[_token]" class="form-control" value="{{ token }}" />
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Abbruch</button>
                                        <button type="submit" class="btn btn-primary">Ummelden</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-default hidden-print" data-toggle="modal" data-target="#changeModal-{{ team.getId }}">
                        <span class="glyphicon glyphicon-random" aria-hidden="true"></span> <span class="hidden-xs">ummelden</span>
                    </button>

                    <div id="cancelModal-{{ team.getId }}" class="modal fade" tabindex="-1" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Soll folgende Mannschaft wirklich abgemeldet werden?</h4>
                                </div>
                                <div class="modal-body">
                                    <p><strong>{{ team.getName() }} ({{ team.getClub().getShortName() }})</strong><br>
                                        <em>{% for m in team.getMembers %}{{ m.getMembership.getPerson.getFirstName }}
                                                {{ m.getMembership.getPerson.getLastName | upper }}
                                                ({% if m.getIsCox %}Stm., {% endif %}{{ m.getMembership.getPerson.getYearOfBirth }}, {{ m.getMembership.getPerson.getAge }})
                                            {% endfor %}</em></p>
                                </div>
                                <div class="modal-footer">
                                    <form method="POST" action="{{ path('registration_delete', { 'team': team.id, 'race': race.id }) }}">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Abbruch</button>
                                        <button type="submit" class="btn btn-primary">Abmelden</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-danger hidden-print" data-toggle="modal" data-target="#cancelModal-{{ team.getId }}">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> <span class="hidden-xs">abmelden</span>
                    </button>
                    {% elseif group.isDeregistered %}
                        abgemeldet
                    {% elseif group.hasChangedToNewRace %}
                        umgemeldet &raquo; <a href="{{ path('race_show', { 'event': race.event.id, 'race': group.getChangedRace.id }) }}">#{{ group.getChangedRace.getNumberInEvent }}</a>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-8">
            <a href="{{ path('race_index', { 'event': race.event.id }) }}" class="btn btn-default">Zurück zur Übersicht</a>
        </div>
    </div>
{% endblock %}