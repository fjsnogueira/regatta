{% extends 'base.html.twig' %}

{% block title %}
    {{ race.getEvent.getName }} - Rennen {{ race.numberInEvent }} - Ab-/Ummeldung
{% endblock %}

{% block body %}
    <h1>#{{ race.numberInEvent }}: {{ rr.getOfficialName(race) }}<br>
        {% if race.extraText != "" %}<small>{{ race.extraText }}</small>{% endif %}
    </h1>

    <table class="table table-striped sortable">
        <thead>
            <th data-defaultsign="_19" data-defaultsort="asc">Lauf</th>
            <th data-defaultsign="_19">Bahn</th>
            <th data-defaultsign="az">Name</th>
            <th data-defaultsort='disabled'></th>
        </thead>
        <tbody>
        {% for section in race.getSections() %}
            {% for group in section.getGroups() %}
            {% set rg = group.getRacingGroup() %}
            <tr>
                <td>
                    {{ section.getNumber() }}
                </td>
                <td>
                    {{ group.getLane() }}
                </td>
                <td>
                    {% if group.isDeregistered %}<s>{% endif %}
                    {{ rg.getName() }} ({{ rg.getClub().getShortName() }})<br>
                    <em>{% for m in rg.getMembers %}{{ m.getMembership.getPerson.getFirstName }}
                            {{ m.getMembership.getPerson.getLastName | upper }}
                            ({% if m.getIsCox %}Stm., {% endif %}{{ m.getMembership.getPerson.getYearOfBirth }}, {{ m.getMembership.getPerson.getAge }}) {% endfor %}</em>
                    {% if group.isDeregistered %}</s>{% endif %}
                </td>
                <td>
                    {% if not group.isDeregistered %}
                    <!-- TODO <a href="#" class="btn btn-default hidden-print"><span class="glyphicon glyphicon-random" aria-hidden="true"></span> <span class="hidden-xs">ummelden</span></a> -->
                    <div id="cancelModal-{{ rg.getId }}" class="modal fade" tabindex="-1" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Soll folgende Mannschaft wirklich abgemeldet werden?</h4>
                                </div>
                                <div class="modal-body">
                                    <p><strong>{{ rg.getName() }} ({{ rg.getClub().getShortName() }})</strong><br>
                                        <em>{% for m in rg.getMembers %}{{ m.getMembership.getPerson.getFirstName }}
                                                {{ m.getMembership.getPerson.getLastName | upper }}
                                                ({% if m.getIsCox %}Stm., {% endif %}{{ m.getMembership.getPerson.getYearOfBirth }}, {{ m.getMembership.getPerson.getAge }})
                                            {% endfor %}</em></p>
                                </div>
                                <div class="modal-footer">
                                    <form method="POST" action="{{ path('registration_delete', { 'rg': rg.id, 'race': race.id }) }}">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Abbruch</button>
                                        <button type="submit" class="btn btn-primary">Abmelden</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-danger hidden-print" data-toggle="modal" data-target="#cancelModal-{{ rg.getId }}">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> <span class="hidden-xs">abmelden</span>
                    </button>
                    {% elseif group.isDeregistered %}
                        abgemeldet
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-8">
            <a href="{{ path('race_index', { 'event': race.event.id }) }}" class="btn btn-default">Zurück zur Übersicht</a>
        </div>
    </div>
{% endblock %}