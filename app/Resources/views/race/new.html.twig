{% extends 'base.html.twig' %}

{% block body %}
<h1>Neues Rennen<br /><small>{{ event.name }} ({{ event.start | date('d.m.Y') }})</small></h1>

<div>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# render any "global" errors #}
    {{ form_errors(form) }}

    <hr>
    <div class="form-group form-inline">
    {{ form_label(form.sex, null, {'label_attr': {'class': 'col-sm-2 control-label'} }) }}
    {{ form_widget(form.sex, {'attr': {'class': 'col-sm-10'}}) }}
    {{ form_errors(form.sex) }}
    </div>

    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10"> <button type="submit" class="btn btn-default">Erstellen</button> </div>
    </div>

    {{ form_end(form) }}

</div>

    <ul>
        <li>
            <a href="{{ path('race_index', { 'id': event.id }) }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}