{% extends 'form.new.base.html.twig' %}

{% block body %}
<h1>Neues Rennen<br /><small>{{ event.name }} ({{ event.start | date('d.m.Y') }})</small></h1>

<div>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# render any "global" errors #}
    {{ form_errors(form) }}

    <hr>
    <div class="form-group form-inline">
    {{ form_label(form.gender, null, {'label_attr': {'class': 'col-sm-2 control-label'} }) }}
    {{ form_widget(form.gender, {'attr': {'class': 'col-sm-10'}}) }}
    {{ form_errors(form.gender) }}
    </div>

    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10"> <button type="submit" class="btn btn-default">Erstellen</button> </div>
    </div>

    {{ form_end(form) }}

</div>

<hr />

<div class="row">
    <div class="col-md-12">
        <a href="{{ path('race_index', { 'event': event.id }) }}" class="btn btn-default">Zur√ºck zur Liste</a>
    </div>
</div>
{% endblock %}