{% extends 'form.edit.base.html.twig' %}

{% block body %}
    <h1>Rennen {{ race.numberInEvent }}</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" class="btn btn-primary" value="Speichern" />
    {{ form_end(edit_form) }}

    <div class="row">
        <div class="col-md-12" align="right">
            {{ form_start(delete_form) }}
            <input type="submit" class="btn btn-danger" value="Löschen">
            {{ form_end(delete_form) }}
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('race_index', { 'event': race.event.id }) }}" class="btn btn-default">Zurück zur Liste</a>
        </div>
    </div>
{% endblock %}
