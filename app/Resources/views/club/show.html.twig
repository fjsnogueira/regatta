{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ club.name }}</h1>

    <dl class="dl-horizontal">
    {% if null != club.shortname %}
        <dt>Kurzname</dt>
        <dd>{{ club.shortname }}</dd>
    {% endif %}
    {% if null != club.abbreviation %}
        <dt>Abkürzung</dt>
        <dd>{{ club.abbreviation }}</dd>
    {% endif %}
        <dt>Stadt</dt>
        <dd>{{ club.city }}{% if null != club.state %} ({{ club.state }}){% endif %}</dd>
        <dt>Anschrift</dt>
        <dd>{{ club.street }} {{ club.streetNumber }}</dd>
        <dt>Postleitzahl</dt>
        <dd>{{ club.zip }}</dd>
        <dt>DRV-ID</dt>
        <dd>{% if null != club.drvId %}{{ club.drvId }}{% else %}nicht verfügbar{% endif %}</dd>
    </dl>

    <hr>

    <p><strong>Mitgliedschaften</strong> <span class="badge">{{ activeMemberships | count }}</span> </p>
{% if count(activeMemberships) > 0 %}
    <table class="table table-striped sortable">
        <thead>
        <tr>
            <th data-defaultsign="az" data-defaultsort="asc">Nachname</th>
            <th data-defaultsign="az">Vorname</th>
            <th>Zeitraum</th>
        </tr>
        </thead>
        <tbody>
        {% for membership in activeMemberships %}
            {% set p = membership.person %}
            <tr>
                <td>{{ p.lastName }}</td>
                <td>{{ p.firstName }}</td>
                <td>{{ membership.since | date("d.m.Y")}} -
                    {% if null != membership.until %}{{ membership.until | date("d.m.Y")}}
                    {% else %}∞{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}
{% if count(formerMemberships) > 0 %}
    <p><strong>ehemalige Mitgliedschaften</strong> <span class="badge">{{ formerMemberships | count }}</span> </p>

    <table class="table table-striped sortable">
        <thead>
        <tr>
            <th data-defaultsign="az" data-defaultsort="asc">Nachname</th>
            <th data-defaultsign="az">Vorname</th>
            <th>Zeitraum</th>
        </tr>
        </thead>
        <tbody>
        {% for membership in formerMemberships %}
            {% set p = membership.person %}
            <tr>
                <td>{{ p.lastName }}</td>
                <td>{{ p.firstName }}</td>
                <td>{{ membership.since | date("d.m.Y")}} - {{ membership.until | date("d.m.Y") }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}

    <hr>

    <ul>
        <li>
            <a href="{{ path('club_index') }}">Zurück zur Übersicht</a>
        </li>
        <li>
            <a href="{{ path('club_edit', { 'id': club.id }) }}">Bearbeiten</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Löschen">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
